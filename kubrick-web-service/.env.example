# ===========================================
# REQUIRED Configuration
# ===========================================

# Server
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173

# MongoDB
MONGODB_URI=mongodb://localhost:27017/kubrick

# Redis
REDIS_URL=redis://localhost:6379

# GCP Cloud Storage
GCP_PROJECT_ID=your-project-id
GCP_BUCKET_NAME=kubrick-videos
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json  # Optional - uses default credentials if not set

# ===========================================
# Optional Configuration
# ===========================================

# Logging - debug, http, info, warn, error (default: info)
LOG_LEVEL=debug

# Auth (future)
OKTA_ENABLED=false
# OKTA_ISSUER=https://your-org.okta.com/oauth2/default
# OKTA_CLIENT_ID=
# OKTA_AUDIENCE=api://default
